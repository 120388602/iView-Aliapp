<view unscope-style=" " class="{{iClass}} i-tabs-tab {{ scroll ? 'i-tabs-tab-scroll' : '' }} {{ current ? 'i-tabs-tab-current' : '' }}">
  <i-badge dot='{{ dot }}' count='{{ dot ? 0 : count }}'>
    <view onTap='handleClickItem'>
      <view class="i-tabs-tab-title {{ current ? 'i-tabs-tab-title-current' : '' }}" a:if='{{ current && currentColor }}' style='color: {{ currentColor }}'>
        {{ title }}
      </view>
      <view class="i-tabs-tab-title {{ current ? 'i-tabs-tab-title-current' : '' }}" a:else >
        {{ title }}
      </view>
    </view>
  </i-badge>
  <view class='i-tabs-tab-bar' a:if='{{ current }}' style='background: {{ currentColor }}'>
  </view>
</view>