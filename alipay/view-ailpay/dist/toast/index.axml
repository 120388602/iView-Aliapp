<view class='toast-index'>
  <view class='i-toast-mask' a:if='{{ visible && mask }}' onTap='handleHide'>
  </view>
  <view class='{{iClass}} i-toast' a:if='{{ visible }}'>
    <block a:if="{{ type !== 'default' }}">
      <view class='i-toast-type'>
        <i-icon i-class='i-toast-icon' type='success' a:if="{{ type === 'success' }}">
        </i-icon>
        <i-icon i-class='i-toast-icon' type='prompt' a:elif="{{ type === 'warning' }}">
        </i-icon>
        <i-icon i-class='i-toast-icon' type='delete' a:elif="{{ type === 'error' }}">
        </i-icon>
        <view class='i-toast-icon i-toast-loading' a:elif="{{ type === 'loading' }}">
        </view>
      </view>
    </block>
    <block a:else >
      <i-icon i-class='i-toast-icon' type='{{ icon }}' a:if='{{ icon }}'>
      </i-icon>
      <image class='i-toast-image' src='{{ image }}' a:if='{{ image }}' mode='aspectFit'>
      </image>
    </block>
    <view class='i-toast-content' a:if='{{ content }}'>
      {{ content }}
    </view>
  </view>
</view>