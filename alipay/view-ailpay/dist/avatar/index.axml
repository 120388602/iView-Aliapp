<view class='avatar-index'>
  <view class="{{iClass}} i-avatar i-avatar-{{ shape }} i-avatar-{{ size }} {{ src ? 'i-avatar-image' : '' }}">
    <image src='{{ src }}' a:if="{{ src !== '' }}">
    </image>
    <view class='i-avatar-string' a:else >
      <slot>
      </slot>
    </view>
  </view>
</view>